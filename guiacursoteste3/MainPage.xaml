<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="guiacursoteste3.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <Grid HorizontalOptions="Center" VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>




                <Frame Grid.Row="0" 
                    BackgroundColor="Gray"
                    BorderColor="Black"
                    CornerRadius="10"
                    HasShadow="True"
                    Padding="10"
                    Margin="5" 
                    Scale="1" 
                    x:Name="Card1">
                    <StackLayout>
                        <Label Text="DESENVOLVIMENTO DE SISTEMAS" FontAttributes="Italic" HorizontalTextAlignment="Center" FontSize="Large" FontFamily="IMPACT" />
                        <Image Source="l1.png" WidthRequest="350" 
                               HeightRequest="150"   />
                        <Label Text="Descrição do Card" FontSize="Micro"  FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                        <Image Source="tds.png" WidthRequest="20" 
                               HeightRequest="20"  />
                    </StackLayout>
                </Frame>

                <Frame Grid.Row="1" 
                    BackgroundColor="Gray"
                    BorderColor="Black"
                    CornerRadius="10"
                    Padding="10"
                    Margin="5"
                    HasShadow="True" 
                    Scale="1" 
                    x:Name="Card2">     
                    <StackLayout Orientation="15">
                        <Label Text="EDIFICAÇÕES"  HorizontalTextAlignment="Center" FontSize="Large" FontFamily="IMPACT"/>
                        <Image Source="l2.png" WidthRequest="350" 
                               HeightRequest="150" 
                               Aspect="AspectFit" />
                        <Label Text="Descrição do Card" FontSize="Micro" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                        <Image Source="tds.png" WidthRequest="20" 
                               HeightRequest="20"  />
                    </StackLayout>
                </Frame>

                <Frame Grid.Row="2" 
                    BackgroundColor="Gray"
                    BorderColor="Black"
                    CornerRadius="10"
                    Padding="10"
                    Margin="5"
                    HasShadow="True" 
                    Scale="1" 
                    x:Name="Card3">
                    <StackLayout Spacing="15">
                        <Label Text="ADMISTRAÇÃO"  HorizontalTextAlignment="Center" FontSize="Large" FontFamily="IMPACT" />
                        <Image Source="l3.png" WidthRequest="350" 
                               HeightRequest="150" />
                        <Label Text="Descrição do Card" FontSize="Micro" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                        <Image Source="tds.png" WidthRequest="20" 
                               HeightRequest="20"  />
                    </StackLayout>
                </Frame>

                <Frame Grid.Row="3" 
                    BackgroundColor="Gray"
                    BorderColor="Black"
                    CornerRadius="10"
                    Padding="10"
                    Margin="5" 
                    HasShadow="True" 
                    Scale="1" 
                    x:Name="Card4">
                    <StackLayout Spacing="15">
                        <Label Text="MECATRÔNICA"  HorizontalTextAlignment="Center" FontSize="Large" FontFamily="IMPACT" />
                        
                            <Image Source="l4.png" WidthRequest="350" 
                               HeightRequest="150"  />
                        <Label Text="Descrição do Card" FontSize="Micro" FontAttributes="Italic" HorizontalTextAlignment="Center"/>
                        <Image Source="tds.png" WidthRequest="20" 
                               HeightRequest="20"  />
                    </StackLayout>
                </Frame>


            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
